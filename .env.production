# ============================================
# Banana API - Production Environment
# ============================================
# Deployment: api.treydong.com
# Services: API + BFF + Database + Redis

# Port (Internal container port)
PORT=3000

# Database - PostgreSQL
SQL_DSN=postgresql://root:123456@postgres:5432/banana

# Redis
REDIS_CONN_STRING=redis://redis

# Session Secret (IMPORTANT: Change this in production!)
SESSION_SECRET=BananaSessionSecret2025FixedValue

# Cache
MEMORY_CACHE_ENABLED=true
SYNC_FREQUENCY=60

# Batch Update
BATCH_UPDATE_ENABLED=true
BATCH_UPDATE_INTERVAL=5

# Logging
ERROR_LOG_ENABLED=true

# Node Type
NODE_TYPE=master

# Timezone
TZ=Asia/Shanghai
